<% layout("/layouts/boilerplate") %>

<form
  method="post"
  action="/listing/<%= listDetails._id %>?_method=PUT"
  novalidate
  class="needs-validation"
  enctype="multipart/form-data"
>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h2>Edit List</h2>
      <div class="md-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          value="<%= listDetails.title %>"
          name="listing[title]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Title required</div>
      </div>
      <div class="md-3 mb-3">
        <label for="title" class="form-label">Description</label>
        <textarea
          type="text"
          name="listing[description]"
          class="form-control"
          required
        >
 <%= listDetails.description %> </textarea
        >
        <div class="invalid-feedback">description required</div>
      </div>
      <img src="<%= originalImgUrl %>" />
      <div class="md-3">
        <label for="image" class="form-label">Uplode Image</label>
        <input name="listing[image]" type="file" class="form-control" />
      </div>
      <div class="row">
        <div class="md-3 col-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            value="<%= listDetails.price %>"
            name="listing[price]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Valid price required</div>
        </div>
        <div class="md-3 col-8">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            value="<%= listDetails.location %>"
            name="listing[location]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location required</div>
        </div>
      </div>
      <div class="md-3">
        <label for="country" class="form-label">Country</label>
        <input
          type="text"
          value="<%= listDetails.country %>"
          name="listing[country]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Country required</div>
      </div>
      <br /><br />
      <button class="btn btn-dark edit-btn">submit</button><br /><br /><br />
    </div>
  </div>
</form>
