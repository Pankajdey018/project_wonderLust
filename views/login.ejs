<% layout('/layouts/boilerplate') %>

<div class="row mt-5 mb-5">
  <div class="col-8 offset-2 mb-5 mt-2">
    <h2>Login to Wonder Lust</h2>
    <hr/>
    <form
      method="post"
      action="/user/login"
      novalidate
      class="needs-validation"
    >
      <div class="md-3 mb-3 mt-3">
        <label for="username" class="form-label">User Name</label>
        <input
          type="text"
          id="username"
          placeholder="Enter username"
          name="username"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter user name to login</div>
      </div>

      <div class="md-3 mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          id="password"
          placeholder="Enter Password"
          name="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback mb-4">password is required</div>
      </div>

      <button class="btn btn-success mt-3 mb-5">Login</button>
    </form>
  </div>
</div>