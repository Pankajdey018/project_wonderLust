<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
  <div class="col-8 offset-2 mb-5 mt-5">
    <h2>Sign-up with Wonder Lust</h2>
    <form
      method="post"
      action="/user/sign-up"
      novalidate
      class="needs-validation"
    >
      <div class="md-3 mb-3 mt-3">
        <label for="username" class="form-label">User Name</label>
        <input
          type="text"
          id="username"
          placeholder="Enter username"
          name="username"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter a Title</div>
      </div>

      <div class="md-3 mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          id="email"
          placeholder="Enter email"
          name="email"
          class="form-control"
          required
        />
        <div class="invalid-feedback">email is required</div>
      </div>

      <div class="md-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          id="password"
          placeholder="Enter Password"
          name="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">password is required</div>
      </div>

      <button class="btn btn-success mt-3 mb-5">sign-up</button>
    </form>
  </div>
</div>
